<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.deshiksridharan.task1.MainActivity">

    <Button
        android:text="RED"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RED"
        style="@style/Widget.AppCompat.Button"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="GREEN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GREEN"
        android:layout_alignBaseline="@+id/BLUE"
        android:layout_alignBottom="@+id/BLUE"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

    <Button
        android:text="BLUE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BLUE"
        android:layout_alignBaseline="@+id/RED"
        android:layout_alignBottom="@+id/RED"
        android:layout_toRightOf="@+id/RED"
        android:layout_toEndOf="@+id/RED"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COLOR CHANGER"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/Colorchanger" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Red"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/Blue" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GREEN"
        android:layout_alignRight="@+id/GREEN"
        android:layout_alignEnd="@+id/GREEN"
        android:layout_marginTop="46dp"
        android:id="@+id/Green" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Blue"
        android:layout_alignBaseline="@+id/Green"
        android:layout_alignBottom="@+id/Green"
        android:layout_alignLeft="@+id/BLUE"
        android:layout_alignStart="@+id/BLUE"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

</RelativeLayout>
